<Window x:Class="PCCSDS.Start"
		x:Name="StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCCSDS"
        mc:Ignorable="d" ResizeMode="NoResize"
		WindowStyle="SingleBorderWindow" Title="Start" Height="600" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
		<!-- Grid Background-->
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="Maroon" Offset="0"></GradientStop>
                <GradientStop Color="Firebrick" Offset="1"></GradientStop>
			</LinearGradientBrush>
		</Grid.Background>
		
		<!-- Components inside the Grid -->
    
    </Grid>
</Window>
